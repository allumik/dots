{
    "editor.fontFamily": "'Iosevka Term SS08', 'Iosevka Term', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.tabSize": 2,
    "editor.renderWhitespace": "trailing",
    "editor.wordWrap": "on",
    "editor.bracketPairColorization.enabled": true,
    "editor.lineNumbers": "off",
    "editor.minimap.enabled": false,
    "editor.quickSuggestionsDelay": 600,
    "editor.suggest.localityBonus": true,
    "editor.detectIndentation": false,
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.suggestSelection": "first",

    "files.autoGuessEncoding": true,
    "files.watcherExclude": {
      "**/.git/objects/**": true,
      "**/.git/subtree-cache/**": true,
      "**/node_modules/*/**": true,
      "**/*data*": true,
      "**/.micromamba/**": true
    },
    "workbench.editor.splitSizing": "split",
    "workbench.editor.tabSizing": "shrink",
    "workbench.editor.navigationScope": "editorGroup",
    "window.title": "${remoteName}${separator}${dirty}${rootName}${separator}${activeEditorShort}",
    "window.titleSeparator": " | ",
    "window.autoDetectColorScheme": true,

    //terminal
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.altClickMovesCursor": false,
    "terminal.integrated.localEchoExcludePrograms": [
      "vim", "vi", "nano", "tmux", "nvim", "emacs", "kak"
    ],
    "terminal.integrated.profiles.windows": {
      "PowerShell": {
        "source": "PowerShell",
        "icon": "terminal-powershell"
      },
      "Command Prompt": {
        "path": [ "${env:windir}\\System32\\cmd.exe" ],
        "args": [],
        "icon": "terminal-cmd"
      },
      "Git Bash": { "source": "Git Bash" }
    },

    "vim.camelCaseMotion.enable": true,
    "vim.easymotion": true,
    "vim.gdefault": true,
    "vim.leader": "<space>",
    "vim.showMarksInGutter": true,
    "vim.sneak": true,
    "vim.sneakReplacesF": false,
    "vim.sneakUseIgnorecaseAndSmartcase": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.normalModeKeyBindingsNonRecursive": [
      // fix for the awful undo
        {
            "before": ["u"],
            "commands": ["undo"]
        },
        {
            "before": ["<C-r>"],
            "commands": ["redo"]
        },
        // map window navigation in normal mode
        { "before": ["<space>", "<space>"], "commands": ["workbench.action.showAllEditors"] },

        { "before": ["<space>", "w", "v"], "commands": ["workbench.action.splitEditor"] },
        { "before": ["<space>", "w", "s"], "commands": ["workbench.action.splitEditorOrthogonal"] },
        { "before": ["<space>", "w", "b"], "commands": ["workbench.action.toggleSidebarVisibility"] },
        { "before": ["<space>", "w", "q"], "commands": ["workbench.action.closeActiveEditor"] },
        { "before": ["<space>", "w", "="], "commands": ["workbench.action.evenEditorWidths"] },

        { "before": ["<space>", "o", "t"], "commands": ["workbench.action.terminal.new"] },
        { "before": ["<space>", "f", "f"], "commands": ["file-browser.open"] },
        { "before": ["<space>", "f", "d"], "commands": ["workbench.view.explorer"] },
        { "before": ["<space>", "s", "d"], "commands": ["search.action.openNewEditor"] },
        { "before": ["<space>", "s", "s"], "commands": ["fuzzySearch.activeTextEditor"] },
        { "before": ["<space>", "i", "s"], "commands": ["editor.action.insertSnippet"] },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        { "before": ["<space>", "s", "s"], "commands": ["fuzzySearch.activeTextEditorWithCurrentSelection"] },
    ],
    "vim.foldfix": true,
    "vim.hlsearch": true,
    "vim.highlightedyank.enable": true,
    "vim.visualstar": true,
    "vim.replaceWithRegister": true,
    "vim.surround": true,
    
    "dance.modes": {
      "normal": {
        "cursorStyle": "block",
        "selectionBehavior": "character",
        "lineNumbers": "off",
        "decorations": {
          "isWholeLine": false,
        },
      },
    },

    // need to tell explicitly that the extension works on the UI side
    "remote.extensionKind": { "ArturoDent.command-alias": [ "ui" ] },
    "commandAlias.category": "",
    "command aliases": {
      "workbench.action.files.save": "w",
      "workbench.action.closeActiveEditor": "q"
    },

    "r.alwaysUseActiveTerminal": true,
    "r.sessionWatcher": true,
    "r.rterm.option": [ "--no-save" ],

    "remote.SSH.enableRemoteCommand": true,
    "remote.SSH.useLocalServer": true,
    "code-runner.runInTerminal": true,
    "jupyter.askForKernelRestart": false,
    "jupyter.disableJupyterAutoStart": true,
    "r.session.levelOfObjectDetail": "Detailed",
    "r.workspaceViewer.showObjectSize": true,
    "git.autofetch": true,
    "files.associations": { "*.rmd": "rmd" },
    "path-autocomplete.triggerOutsideStrings": true,
    "files.simpleDialog.enable": true,
    "window.openFoldersInNewWindow": "off",
    "security.workspace.trust.untrustedFiles": "open",
    "r.plot.defaults.fullWindowMode": true,
    "r.plot.defaults.plotPreviewLayout": "scroll",
    "notebook.consolidatedRunButton": true,
    "files.exclude": { "**/.html": true },
    "search.exclude": { "**/*.html": true },
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.editor.limit.enabled": true,
    "jupyter.interactiveWindow.textEditor.executeSelection": true,
    "remote.SSH.remotePlatform": {
      "old_lenno": "linux",
      "plikgr0003": "linux",
      "abacus_superrun": "linux",
      // "cenv~abacus": "linux",
      "abacus": "linux"
    },
    "explorer.confirmDragAndDrop": false,
    "git.ignoreMissingGitWarning": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "workbench.editor.empty.hint": "hidden",
    "window.density.editorTabHeight": "compact",
    "jupyter.interactiveWindow.creationMode": "perFile",
    "window.commandCenter": false,
    "workbench.layoutControl.enabled": false,
    "workbench.activityBar.location": "hidden",
    "terminal.integrated.defaultLocation": "editor",
    "r.rmarkdown.knit.defaults.knitWorkingDirectory": "workspace root",
    "editor.accessibilitySupport": "off",
    "explorer.confirmDelete": false,
    "interactiveWindow.executeWithShiftEnter": true,
    "workbench.startupEditor": "none",
    "workbench.colorCustomizations": {
      "[windows-nt]": {
        "icon.foreground": "#222"
      }
    },
    "window.dialogStyle": "custom",
    "settingsSync.ignoredSettings": [
      "editor.fontSize"
    ],
    "workbench.colorTheme": "Default Light Modern",
    "window.menuBarVisibility": "toggle",
    "terminal.integrated.inheritEnv": false,
    "cSpell.enabled": false,
    "remote.SSH.experimental.chat": false,
    "git.confirmSync": false,
    "dev.containers.dockerPath": "podman",
    "dev.containers.dockerSocketPath": "/var/run/podman.sock",
    "git.openRepositoryInParentFolders": "never",
    "remote.SSH.suppressWindowsSshWarning": true,
    "github.copilot.enable": {
      "*": true,
      "quarto": true
    },
    "workbench.panel.showLabels": false,
    "chat.editing.confirmEditRequestRetry": false,
    "workbench.preferredDarkColorTheme": "Default Light Modern",
    "github.copilot.chat.codeGeneration.instructions": [
      { "text": "Use two spaces for indentation where possible", }
    ],
    "github.copilot.advanced": {},
    "window.titleBarStyle": "native",
    "github.copilot.chat.agent.thinkingTool": true
}